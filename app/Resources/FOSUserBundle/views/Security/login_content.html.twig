{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="col-md-4 col-md-offset-4">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="panel panel-body">
                <div class="form-group has-feedback has-feedback-left">
                    <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" placeholder="Email"/>
                </div>

                <div class="form-group has-feedback has-feedback-left">
                    <input type="password" id="password" class="form-control" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}"/>
                </div>
                {% if error %}
                    <div class="text-danger text-center mb-10">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <button type="submit" id="_submit" name="_submit" class="btn btn-primary btn-block">{{ 'login.sign_in'|trans }}</button>
                </div>

                <div class="row text-center">
                    <div class="col-sm-6">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked/>
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="col-sm-6">
                        <a class="ml-20" href="{{ path('fos_user_resetting_request') }}">{{ 'login.forgot_password'|trans }}</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
